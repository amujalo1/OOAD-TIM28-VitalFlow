@model VitalFlow.Models.Zahtjev

@{
    ViewData["Title"] = "Create";
}

<style>
    .custom-container {
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        color: white;
        padding: 20px;
    }

        .custom-container .form-group {
            margin-bottom: 15px; /* Malo veći razmak između form grupa */
        }

        .custom-container .form-control {
            width: 100%; /* Puno širine */
        }

        .custom-container .btn-primary {
            margin-top: 15px;
            width: 100%; /* Puno širine dugmeta */
            background-color: #dc3545; /* Crvena boja */
            border: none;
        }

            .custom-container .btn-primary:hover {
                background-color: #c82333; /* Tamnija crvena boja na hover */
            }

        .custom-container label {
            text-align: left; /* Poravnanje labele lijevo */
            display: block; /* Da se labela proteže na cijelu širinu */
            margin-bottom: 5px; /* Mali razmak ispod labele */
        }

        .custom-container .form-control.textarea {
            height: 200px; /* Smanjena visina textarea */
        }
</style>

<h1 class="text-center">Forma Kliničkih zahtjeva krvi</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="custom-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                <div class="form-group">
                    <label asp-for="kolicina" class="control-label">Količina</label>
                    <input asp-for="kolicina" class="form-control" />
                    <span asp-validation-for="kolicina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="krvnaGrupa" class="control-label">Krvna Grupa</label>
                    <select asp-for="krvnaGrupa" class="form-control" asp-items="ViewBag.KrvnaGrupa"></select>
                    <span asp-validation-for="krvnaGrupa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="opis" class="control-label">Opis</label>
                    <textarea asp-for="opis" class="form-control textarea"></textarea>
                    <span asp-validation-for="opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Pošalji zahtjev</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
